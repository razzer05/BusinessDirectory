<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.Sherlock.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@color/business.grey</item>
    	<item name="actionBarStyle">@style/Business.ActionBar</item>
    </style>
    
    <style name="Business.ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar.Solid">
        <item name="background">@color/business.green</item>
        <item name="titleTextStyle">@style/Business.ActionBar.TitleTextColour</item>
    </style>
    
    <style name="Business.ActionBar.TitleTextColour" parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name ="android:textColor">@color/business.white</item>
    </style>

</resources>